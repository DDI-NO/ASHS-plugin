<h2>ASHS Analysis</h2>



<div id="analysisTabs" class="yui-navset">
    <ul class="yui-nav" style="">
        <li class="selected"><a href="#analysis1"><em>Volume raw</em></a></li>
        <li><a href="#analysis2"><em>Volume heur</em></a></li>
    </ul>

    <div class="" id="ICV">
      <table>
        <TD>ICV</TD><TD>$!turbineUtils.formatNumber($!item.getDoubleProperty("ashs:ashsData/measures/icv"),0)</TD>
      </table>
    </div>

    #macro (volumeTab $tabID $volumeString)
      <div id="$tabID">
          <!-- BEGIN $volumeString MEASURES -->
          #set($ashs_region_NUM_ROWS=$item.getChildItems("ashs:ashsData/measures/$volumeString/regions/region").size() - 1)
          #if($ashs_region_NUM_ROWS>=0)
              <table class="xnat-table">

                  <tr><TH>Region Name</TH><TH>N Slices</TH><TH>Hemisphere</TH><TH>Volume (mm<sup>3</sup>)</tr>

                  #foreach($ashs_region_COUNTER in [0..$ashs_region_NUM_ROWS])
                      <!-- BEGIN ashs_ashsData/measures/$volumeString/regions/region[$ashs_region_COUNTER] -->
                      <tr>
                          <TD>$!item.getStringProperty("ashs:ashsData/measures/$volumeString/regions/region[$ashs_region_COUNTER]/name")</TD>
                          <TD>$!item.getStringProperty("ashs:ashsData/measures/$volumeString/regions/region[$ashs_region_COUNTER]/NSlices")</TD>
                          <TD>$!item.getStringProperty("ashs:ashsData/measures/$volumeString/regions/region[$ashs_region_COUNTER]/hemisphere")</TD>
                          <TD>$!turbineUtils.formatNumber($!item.getDoubleProperty("ashs:ashsData/measures/$volumeString/regions/region[$ashs_region_COUNTER]/Volume"),0)</TD>
                      </tr>

                      <!-- END ashs_ashsData/measures/volumetric/regions/region[$ashs_region_COUNTER] -->
                  #end
              </table>
          #end
          <!-- END ashs_ashsData VOLUMETRIC MEASURES-->
      </div>
    #end

    <div class="yui-content">
        #volumeTab("analysis1" "volumetric_raw")
        #volumeTab("analysis2" "volumetric_heur")
    <!-- END YUI CONTENT -->
    </div>
<!-- END YUI NAVSET -->
</div>
